root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,vue}]
quote_type = single

# For JSON or other files that may require 4 spaces
[*.json]
indent_size = 2

# Ignore specific folders like node_modules
[**/node_modules/**]
indent_style = unset
trim_trailing_whitespace
